<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".LogandSign">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="328dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent">

        <EditText
            android:id="@+id/enPass"
            android:layout_width="284dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btlogin"
            android:layout_marginBottom="128dp"
            android:background="@drawable/rounder"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/enEmail"
            android:layout_width="282dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            android:background="@drawable/rounder"
            android:ems="10"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="174dp" />

        <Button
            android:id="@+id/btlogin"
            android:layout_width="286dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/enEmail"
            android:layout_marginBottom="69dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Log In"
            android:textColor="@color/colorTransparentWhite" />

        <Button
            android:id="@+id/btfopass"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignEnd="@+id/btlogin"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="23dp"
            android:background="@android:color/transparent"
            android:text="Forgot Password?"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="68dp"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:background="@drawable/pers" />

    </RelativeLayout>

</RelativeLayout>